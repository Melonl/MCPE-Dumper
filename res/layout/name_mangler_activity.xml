<?xml version="1.0" encoding="utf-8"?>
	<RelativeLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">

		<LinearLayout
			android:layout_width="match_parent"
			android:orientation="horizontal"
			android:layout_height="match_parent">

			<EditText
				android:layout_width="wrap_content"
				android:layout_height="fill_parent"
				android:id="@+id/namemangleractivityEditText1"/>

			<View
				android:layout_width="2dp"
				android:layout_height="match_parent"
				android:background="#0076FB"/>

			<EditText
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:id="@+id/namemangleractivityEditText2"/>

		</LinearLayout>

		<com.gc.materialdesign.views.ButtonFloat
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_alignParentBottom="true"
			android:layout_marginRight="30dp"
			android:background="#FF8800"
			materialdesign:iconDrawable="@drawable/ic_settings_backup_restore_black"
			android:layout_marginBottom="30dp"
			android:onClick="mangle"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_alignParentBottom="true"
			android:layout_marginRight="90dp"
			android:layout_marginBottom="50dp"
			android:background="#CCCCCC"
			android:text="Mangle Name"/>

	</RelativeLayout>

