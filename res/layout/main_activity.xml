<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical">

	<ScrollView
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">

		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation="vertical">

			<TextView
				android:layout_height="wrap_content"
				android:text="@string/main_activity_tag_tools"
				android:layout_width="match_parent"/>

			<View
				android:layout_height="1dp"
				android:background="?android:attr/dividerVertical"
				android:layout_width="match_parent"/>

			<com.gc.materialdesign.views.ButtonFlat
				android:layout_height="wrap_content"
				android:text="@string/start_compiling"
				android:layout_width="match_parent"
				android:onClick="startCompile"/>

			<com.gc.materialdesign.views.ButtonFlat
				android:layout_height="wrap_content"
				android:text="@string/demangle_name"
				android:layout_width="match_parent"
				android:onClick="demangleName"/>
			
			<com.gc.materialdesign.views.ButtonFlat
				android:layout_height="wrap_content"
				android:text="@string/genTemplate"
				android:layout_width="match_parent"
				android:onClick="genTemplate"/>

			<TextView
				android:layout_height="wrap_content"
				android:text="@string/main_activity_tag_others"
				android:layout_width="match_parent"/>

			<View
				android:layout_height="1dp"
				android:background="?android:attr/dividerVertical"
				android:layout_width="match_parent"/>

			<com.gc.materialdesign.views.ButtonFlat
				android:layout_height="wrap_content"
				android:text="@string/about"
				android:layout_width="match_parent"
				android:onClick="toAbout"/>

			<com.gc.materialdesign.views.ButtonFlat
				android:layout_height="wrap_content"
				android:text="@string/exit_app"
				android:layout_width="match_parent"
				android:onClick="exit"/>

		</LinearLayout>

	</ScrollView>

</LinearLayout>

